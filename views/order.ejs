<!DOCTYPE html>
<html>
<%include partial/head.ejs%>

  <body>
    <%include partial/navbar.ejs%>
      <%include partial/dashboard.ejs%>

        <div class="table">
          <h3>Daftar Transaksi</h3>
          <% if(session.role == 'customer') {%>
            <table class="main-table">
              <tr>
                <th>No</th>
                <th>ID Transaksi</th>
                <th>Tanggal</th>
                <th>Phone</th>
                <th>Total</th>
                <th>Status</th>

              </tr>
              <% products.forEach(function(product, index) {
                            if(product.status == 'process') {%>
                <tr>
                  <td>
                    <%= index+1%>
                  </td>
                  <td>
                    <%=product.nota%>
                  </td>
                  <td>
                    <%=product.createdAt%>
                  </td>
                  <% if(product.UserProducts) { %>
                    <% product.UserProducts.forEach(function(userproduct){ %>
                      <td>
                        <%=userproduct.phone%>
                      </td>
                      <%})} else {%>
                        <td>

                        </td>
                        <%}%>

                          <td>
                            <%=product.total%>
                          </td>
                          <td>
                            <%=product.status%>
                          </td>
                </tr>

                <%}else{%>
                  <td colspan="6">Belum ada Transaksi</td>

                <%}})%>

            </table>

            <%} else if(session.role == 'admin') { %>
              <table class="main-table">
                <tr>
                  <th>No</th>
                  <th>ID Transaksi</th>
                  <th>Tanggal</th>
                  <th>Phone</th>
                  <th>Total</th>
                  <th>Status</th>
                  <th>Action</th>

                </tr>
                <% products.forEach(function(product, index) {
                                if(product.status == 'process') {%>
                  <tr>
                    <td>
                      <%= index+1%>
                    </td>
                    <td>
                      <%=product.nota%>
                    </td>
                    <td>
                      <%=product.createdAt%>
                    </td>
                    <% if(product.UserProducts) { %>
                      <% product.UserProducts.forEach(function(userproduct){ %>
                        <td>
                          <%=userproduct.phone%>
                        </td>
                        <%})} else {%>
                          <td>

                          </td>
                          <%}%>

                            <td>
                              <%=product.total%>
                            </td>
                            <td>
                              <%=product.status%>
                            </td>
                            <td>
                              <a class="confirm" href="order/confirm/<%=product.id%>">Confirm</a>
                            </td>
                  </tr>
                  <% }%>
                    <%})%>
              </table>
              <%}%>


  </body>

</html>
